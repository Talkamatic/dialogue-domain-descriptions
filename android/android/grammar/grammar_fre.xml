<?xml version="1.0" encoding="utf-8"?>
<grammar>
  <action name="call">
    <verb-phrase>
      <verb ref="call"/>
    </verb-phrase>
  </action>

  <request action="call">
    <utterance>
      <one-of>
        <item>passer un appel</item>
        <item>appellez <individual sort="contact"/></item>
      </one-of>
    </utterance>
  </request>

  <question speaker="system" predicate="selected_contact_to_call" type="wh_question">
    <utterance>qui voulez-vous appeler</utterance>
  </question>

  <report action="Call" status="ended">
    <utterance>j'appelle <individual predicate="selected_contact_to_call"/></utterance>
  </report>

  <question speaker="system" predicate="selected_contact_of_phone_number" type="wh_question">
    <utterance>le numéro de téléphone de qui</utterance>
  </question>

  <predicate name="phone_number_of_contact">
    <noun-phrase>
      <noun ref="number" />
    </noun-phrase>
  </predicate>

  <question speaker="user" predicate="phone_number_of_contact">
    <utterance>
      <one-of>
        <item>donnez-moi un numéro de téléphone</item>
        <item>quel est le numéro de <individual sort="contact"/></item>
        <item>donnez-moi le numéro de <individual sort="contact"/></item>
      </one-of>
    </utterance>
  </question>

  <answer speaker="system" predicate="phone_number_of_contact">
    <utterance>
      Le numéro de <individual predicate="selected_contact_of_phone_number"/> est le
      <individual predicate="phone_number_of_contact"/>
    </utterance>
  </answer>

  <validity name="CallerNumberAvailable">
    <utterance>je n'ai pas le numéro de <individual predicate="selected_contact_to_call"/></utterance>
  </validity>

  <validity name="PhoneNumberAvailable">
    <utterance>je n'ai pas le numéro de <individual predicate="selected_contact_of_phone_number"/></utterance>
  </validity>

  <lexicon>
    <verb id="call">
      <infinitive>appeller</infinitive>
    </verb>
    <noun id="number">
      <singular>numéro</singular>
    </noun>
  </lexicon>
</grammar>
